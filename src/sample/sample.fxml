<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="loginText">Login</Text>
    <TextField GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="userField">UserName</TextField>
    <PasswordField GridPane.columnIndex="0" GridPane.rowIndex="2" fx:id="passwordField">Password</PasswordField>
    <Button GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#checking" fx:id="loginBtn" defaultButton="true">Log in</Button>
</GridPane>